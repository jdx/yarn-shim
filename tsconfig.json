{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "dom",
      "es2018",
    ],
    "target": "es2018",
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
}
